<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LETTER">
        <item name="android:layout_width">@dimen/default_circle</item>
        <item name="android:layout_height">@dimen/default_circle</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="AppTheme.SENTENCE">
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
