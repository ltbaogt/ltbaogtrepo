<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/AppTheme.Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General Setting"
                        android:textColor="@color/colorPrimary"
                        android:textSize="19dp" />

                    <RelativeLayout
                        style="@style/setting_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/setting_service_switch_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminder OFF/ON"
                            android:textColor="@android:color/black" />

                        <Switch
                            android:id="@+id/setting_service_switch_switch"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/setting_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/setting_dismiss_time_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="10dp"
                            android:text="Time to dismiss reminder"
                            android:textColor="@android:color/black" />

                        <SeekBar
                            android:id="@+id/setting_dismiss_time_sb"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/setting_dismiss_time_title"
                            android:layout_marginLeft="20dp"
                            android:max="5" />

                        <TextView
                            android:id="@+id/setting_dismiss_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/setting_dismiss_time_title"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/setting_dismiss_time_sb"
                            android:text="5s" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/setting_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="chooseColor">

                        <TextView
                            android:id="@+id/dismiss_time_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Choose theme color"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dismiss_time_title"
                            android:text="Change theme color of reminder background"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/setting_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:onClick="createNewDB">

                        <TextView
                            android:id="@+id/change_color_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clean up vocabularies"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/change_color_title"
                            android:text="Clean up your vocabularies, all data will be eased"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/AppTheme.Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Backup and Restore"
                        android:textColor="@color/colorPrimary"
                        android:textSize="19dp" />

                    <RelativeLayout
                        style="@style/setting_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:onClick="backupVocabulary">

                        <TextView
                            android:id="@+id/backup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Backup your vocabularies"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/backup_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/backup"
                            android:text="Backup your vocabularies"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/setting_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:onClick="restoreVocabulary">

                        <TextView
                            android:id="@+id/restore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Restore your vocabularies"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/restore_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/restore"
                            android:text="Restore your vocabularies"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/AppTheme.Setting"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification"
                        android:textColor="@color/colorPrimary"
                        android:textSize="19dp" />

                    <RelativeLayout
                        style="@style/setting_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/quick_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quick add through notification"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/quick_add_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quick_add"
                            android:text="Notification is always show to add new word quickly"
                            android:textSize="12sp" />

                        <Switch
                            android:id="@+id/setting_quick_add_switch"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
