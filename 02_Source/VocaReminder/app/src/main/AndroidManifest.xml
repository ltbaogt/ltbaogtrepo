<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ltbaogt.vocareminder.vocareminder">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreenActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:launchMode="singleTask"/>

        <service
            android:name=".service.OALService"
            android:process=":vreminder" />
        <provider
            android:name=".provider.AppProvider"
            android:authorities="com.ltbaogt.vocareminder.app"
            android:exported="true"
            android:grantUriPermissions="true"
            android:label="WordProvider"
            android:multiprocess="true"
            android:readPermission="com.ltbaogt.vocareminder.app.READ"
            android:writePermission="com.ltbaogt.vocareminder.app.WRITE" />
    </application>

</manifest>